<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
    <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
<div class = "edit book">
    <div class = "field">
        <label class = "book-title">Title</label></br>
        <%= f.text_field:title %>
    </div>

    <div class = "field">
        <label class = "book-title">Body</label></br>
        <%= f.text_area:body %>
    </div>
    <div class = "field">
        <%= f.submit'Update Book' %>
    </div>
    <%= link_to "Show",book_path %> |
    <%= link_to 'Back',books_path %>

<% end %>
</div>